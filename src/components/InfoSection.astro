---
import InfoCard from "./InfoCard.astro"
const {data, name} = Astro.props
---

<section class="w-full flex flex-col items-center p-4 mb-10">
  <h3 class="text-center font-yeseva font-extrabold text-[#3F4D39] text-3xl mb-4">{name}</h3>
  <div class="flex flex-col justify-center gap-6 sm:flex-row sm:flex-wrap">
    {
      data.map(card => {
        return <InfoCard icon={card.icon} name={card.name} description={card.description} thereIsIcon={card.thereIsIcon} />
      })
    }
  </div>
</section>

